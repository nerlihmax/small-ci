{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./bin/",
    "target": "es6",
    "module": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
